{
  "compilerOptions": {
    "target": "ES2022", // Use a more modern target for ESM
    "module": "NodeNext", // Use Node.js ESM module system
    "moduleResolution": "NodeNext", // Use Node.js ESM module resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Still useful for CJS interop if needed
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"] // コンパイル除外対象
}
